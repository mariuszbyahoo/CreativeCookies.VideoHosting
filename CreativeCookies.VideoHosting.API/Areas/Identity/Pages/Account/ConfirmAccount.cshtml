@page
@using Microsoft.Extensions.Configuration
@model CreativeCookies.VideoHosting.API.Areas.Identity.Pages.Account.ConfirmAccountModel
@inject IConfiguration Configuration

@{
    var clientAddress = Configuration["ClientUrl"];
}

<div style="margin-top: 10%; display: flex; align-items: center; justify-content: center; height: 100%;">
    <div style="text-align:center">
        <p class="text-center" style="font-size: large; font-weight: 600;">Confirmation link sent</p>
        <p class="text-center" style="font-size: medium; font-weight:200;">Please click the link sent in email to confirm your account</p>
        <a href="@clientAddress">Return to @Model.WebsiteName</a>
    </div>
</div>