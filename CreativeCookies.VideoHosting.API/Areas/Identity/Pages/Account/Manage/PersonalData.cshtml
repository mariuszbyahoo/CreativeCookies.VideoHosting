@page
@model PersonalDataModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@Localizer["PersonalData"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@Localizer["PersonalDataTxt1"]</p>
        <p>
            <strong>@Localizer["PersonalDataTxt2"].</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" style="margin:1%;" type="submit">@Localizer["Download"]</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" style="margin:1%;" class="btn btn-danger">@Localizer["Delete"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
