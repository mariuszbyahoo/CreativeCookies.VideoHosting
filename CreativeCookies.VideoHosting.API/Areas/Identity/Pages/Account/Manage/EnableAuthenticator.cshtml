@page
@model EnableAuthenticatorModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@Localizer["EnableAuthenticatorTitle"]</h3>
<div>
    <p>@Localizer["EnableAuthenticatorHeader"]:</p>
    <ol class="list">
        <li>
            <p>
                @Localizer["DownloadAuthAppTxt1"]
            </p>
        </li>
        <li>
            <p>@Localizer["DownloadAuthAppTxt2"] <kbd>@Model.SharedKey</kbd> @Localizer["DownloadAuthAppTxt3"].</p>
          @*<div class="alert alert-info">Learn how to <a href="https://go.microsoft.com/fwlink/?Linkid=852423">enable QR code generation</a>.</div>
            <div id="qrCode"></div>
            <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>*@
        </li>
        <li>
            <p>
                @Localizer["DownloadAuthAppTxt4"].
            </p>
            <div class="row">
                <div class="col-md-6">
                    <form id="send-code" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Code" class="form-control" autocomplete="off" placeholder="Please enter the code."/>
                            <label asp-for="Input.Code" class="control-label form-label">@Localizer["VerificationCode"]</label>
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Verify"].</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    </form>
                </div>
            </div>
        </li>
    </ol>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
