@page
@model DeletePersonalDataModel
@{
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h3>
    @Localizer["DeletePersonalDataTitle"]</h3>

<div class="alert alert-warning" role="alert">
        <h5>@Localizer["DeletePersonalDataTxt1"].</h5>
        <ul>
            <li>@Localizer["DeletePersonalDataTxt2"]</li>
            <li>@Localizer["DeletePersonalDataTxt3"]</li>
        </ul>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@Localizer["PleaseEnterYourPassword"]." />
                <label asp-for="Input.Password" class="form-label">@Localizer["Password"]</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">@Localizer["DeletePersonalDataBtnTxt"]</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
