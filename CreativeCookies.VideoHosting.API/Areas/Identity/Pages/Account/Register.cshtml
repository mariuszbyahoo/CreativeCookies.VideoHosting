@page
@model RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Configuration
@inject IViewLocalizer Localizer
@inject IConfiguration Configuration

@{
    var clientAddress = Configuration["ClientUrl"];
}

<h1 style="text-align:center;">@Localizer["Register"]</h1>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="Input.Email">Email</label>
        <br />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.Password">@Localizer["Password"]</label>
        <br />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
        <label asp-for="Input.ConfirmPassword">@Localizer["ConfirmPassword"]</label>
        <br />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Input.AcceptTermsAndPrivacy" class="form-check-input" />
        <label asp-for="Input.AcceptTermsAndPrivacy" class="form-check-label">Oświadczam, że zapoznałam/em się z Regulaminem Serwisu i Polityką Prywatności Serwisu oraz akceptuję ich treść.</label>
        <br />
        <span asp-validation-for="Input.AcceptTermsAndPrivacy" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Input.ConsentToProcessData" class="form-check-input" />
        <label asp-for="Input.ConsentToProcessData" class="form-check-label">Wyrażam zgodę na przetwarzanie moich danych osobowych w celach marketingowych przez Operatora Serwisu. Moja zgoda obejmuje nazwę lub imię i nazwisko oraz adres e-mail podane podczas dokonania Rejestracji.</label>
        <br />
        <span asp-validation-for="Input.ConsentToProcessData" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Input.ConsentToElectronicCommunication" class="form-check-input" />
        <label asp-for="Input.ConsentToElectronicCommunication" class="form-check-label">Wyrażam zgodę na używanie przez Operatora Serwisu środków komunikacji elektronicznej oraz telekomunikacyjnych urządzeń końcowych w celu przesyłania mi informacji handlowych oraz prowadzenia marketingu przez Operatora Serwisu.</label>
        <br />
        <span asp-validation-for="Input.ConsentToElectronicCommunication" class="text-danger"></span>
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Register"]</button>
</form>
<p><a href="@clientAddress/regulations">Regulamin serwisu</a></p>
<p><a href="@clientAddress/privacyPolicy">Polityka Prywatności serwisu</a></p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
